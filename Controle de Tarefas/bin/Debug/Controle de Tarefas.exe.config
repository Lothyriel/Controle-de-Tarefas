<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<connectionStrings>
		<!--SQL Server-->
		<add connectionString="Data Source=(LocalDB)\MSSqlLocalDB;Initial Catalog=DBControleTarefas;Integrated Security=True;Pooling=False"
			 name="SQLServer"
			 providerName="System.Data.SqlClient"/>
		<!--SQLite-->
		<add connectionString="Data Source=..\..\..\ControleTarefas.DB\dbo\Controle de Tarefas.db;Version=3"
			name="SQLite"
			providerName="System.Data.SQLite"/>
	</connectionStrings>

	<appSettings>
		<!--Escolher tipo de banco-->
		<add key="bancoDeDados" value="SQLite"/>
	</appSettings>
	<system.data>
		<DbProviderFactories>
			<remove invariant="System.Data.SQLite"></remove>
			<add name="ADO.NET Provider for SQLite"
				 invariant="System.Data.SQLite"
				 description="ADO.NET Provider for SQLite "
				 type="System.Data.SQLite.SQLiteFactory, System.Data.SQLite">
			</add>
		</DbProviderFactories>
	</system.data>
</configuration>

